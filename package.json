{
  "name": "sap_deploy",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap-cloud-sdk/generator": "^4.2.0",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-bookshop": "cds watch --open bookshop/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy sap_deploy --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-custom_view_bookshop": "cds watch --open customviewbookshop/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "cds": {},
  "requires": {
    "db": {
      "kind": "sqlite",
      "credentials": {
        "url": "db/my-bookshop.sqlite"
      },
      "schema_evolution": "auto"
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/bookshop"
  ]
}
